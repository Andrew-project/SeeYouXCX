page {
  background-color: #fff;
}
.new-issue textarea {
  width: 100%;
}
.new-issue .issue-image {
  width: 216rpx;
  height: 216rpx;
  display: inline-block;
  position: relative;
}
.new-issue .issue-image .del-img {
  width: 30rpx;
  height: 30rpx;
  overflow: hidden;
  border-radius: 50%;
  transform: rotate(45deg);
  border: 2rpx solid red;
  background: red;
  position: absolute;
  right: 0;
  top: 0;
}
.new-issue .issue-image .del-img::before {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  width: 16rpx;
  margin-left: -8rpx;
  margin-top: -1rpx;
  border-top: 2rpx solid #ffffff;
}
.new-issue .issue-image .del-img::after {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  height: 16rpx;
  margin-left: -1rpx;
  margin-top: -8rpx;
  border-left: 2rpx solid #ffffff;
}
.new-issue .issue-image .add-issue {
  width: 100%;
  height: 100%;
  overflow: hidden;
  border: 2rpx solid #e8e8e8;
  position: relative;
}
.new-issue .issue-image .add-issue::before {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  width: 160rpx;
  margin-left: -80rpx;
  margin-top: -2rpx;
  border-top: 4rpx solid #e8e8e8;
}
.new-issue .issue-image .add-issue::after {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  height: 160rpx;
  margin-left: -2rpx;
  margin-top: -80rpx;
  border-left: 4rpx solid #e8e8e8;
}
.new-issue button {
  width: 600rpx;
  margin: 200rpx auto 0 auto;
}

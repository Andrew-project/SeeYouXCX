.nav_bar {
  background-color: #fff;
}
.pull-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1px solid #f5f5f5;
  position: fixed;
  bottom: -40rpx;
  left: 325rpx;
  background-color: #d9d9d9;
  z-index: 1000;
}
.bottom-divide {
  height: 2rpx;
  width: 750rpx;
  left: 0;
  position: fixed;
  bottom: 0;
  background: #f5f5f5;
  z-index: 1001;
}
.swiper-container {
  position: relative;
}
.swiper-container .swiper {
  height: 360rpx;
}
.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}
.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 30rpx;
  bottom: 20rpx;
  display: flex;
  justify-content: flex-end;
  z-index: 9;
}
.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
}
.swiper-container .dots .dot.active {
  width: 24rpx;
  background: #fff;
}
.roller_content {
  padding: 10px 15px;
  line-height: 30px;
}
.roller-text {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.plp {
  position: fixed;
  right: 0;
  bottom: 200rpx;
  z-index: 1000;
}
.item .avatarUrl {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  float: left;
}
.item .item-content {
  width: 540rpx;
  margin-left: 30rpx;
  float: left;
  margin-top: 15rpx;
}
.item .item-content .desc {
  line-height: 1.5;
}
.item .item-content .single-img {
  width: 350rpx;
  height: 430rpx;
}
.item .item-content .c-img {
  width: 255rpx;
  height: 255rpx;
}
.item .item-content .c-img:nth-of-type(2n) {
  margin-left: 20rpx;
}
.item .item-content .dialog-box {
  width: 540rpx;
  min-height: 60rpx;
  border: 1px solid #f5f5f5;
  position: relative;
  margin-top: 20rpx;
  background-color: #f5f5f5;
}
.item .item-content .dialog-box-1 .triangle {
  width: 0;
  height: 0;
  border-top: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-bottom: 20rpx solid #f5f5f5;
  border-left: 20rpx solid transparent;
  position: absolute;
  top: -40rpx;
  left: 20rpx;
}
.mask {
  transition: all 0.25s ease-in;
  transform: scale(1.5);
}
.mask.show {
  transform: scale(1);
}
.nav_bg {
  background: linear-gradient(to right, #fd5860, #f64b51);
  color: #fff;
  z-index: 800;
}
.nav_switch {
  width: 100%;
}
.nav_switch view {
  width: 90%;
  margin: 0 auto;
  height: 2px;
  border-radius: 5px;
  background: #fff;
  transition: all ease 0.3s 0s;
  -moz-transition: all ease 0.3s 0s;
  -webkit-transition: all ease 0.3s 0s;
}
.nav_switch view.middle {
  margin: 6px auto;
}
.nav_switch view.rotate1 {
  transform: translate(0, 0px) rotate(-45deg);
  -moz-transform: translate(0, 0px) rotate(-45deg);
  -webkit-transform: translate(0, 0px) rotate(-45deg);
  -ms-transform: translate(0, 0px) rotate(-45deg);
}
.nav_switch view.rotate2 {
  transform: scale(0, 1);
  -moz-transform: scale(0, 1);
  -webkit-transform: scale(0, 1);
  -ms-transform: scale(0, 1);
  margin: 0;
}
.nav_switch view.rotate3 {
  transform: translate(0, -4px) rotate(45deg);
  -moz-transform: translate(0, -4px) rotate(45deg);
  -webkit-transform: translate(0, -4px) rotate(45deg);
  -ms-transform: translate(0, -4px) rotate(45deg);
}
.nav_content {
  position: fixed;
  bottom: 110rpx;
  width: 200rpx;
  right: 70rpx;
}
.nav_content .ui-row {
  width: 90%;
  margin: 0 auto;
  display: inline-block;
}
.nav_content .ui-icon {
  display: block;
  width: 44px;
  height: 44px;
  line-height: 44px;
  border-radius: 50%;
}
.nav_content view {
  padding-top: 10px;
}
.nav_content .nav_1 {
  background: #ff8e8e;
  box-shadow: rgba(255, 142, 142, 0.498039) 0px 6px 15px 0;
}
.nav_content .nav_1 + view {
  color: #ff8e8e;
}
.nav_content .nav_2 {
  background-color: #6ee3c3;
  box-shadow: #abe8d8 0px 6px 15px 0px;
}
.nav_content .nav_2 + view {
  color: #6ee3c3;
}

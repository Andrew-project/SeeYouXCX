<view>
  <nav-bar nav-title="漂流瓶子" is-back="true" _pid="{{_pid}}"></nav-bar>

  <view class="header">
    <!--get.wxml-->
    <view class="header-bg-style">
      <image src="{{bgPng}}" style="height:{{imageHeight}}px;width:{{imageWidth}}px" />
    </view>
    <button class="header-btn-style" bindtap="onClick">xxxxxx</button>
    <view class="header-slide-mask" style="display:{{maskDisplay}}" bindtap="slideCloseEvent"></view>
    <view class="header-slide-menu" style="right: {{slideRight}}px;width: {{slideWidth}}px;height:{{slideHeight}}px;" animation="{{slideAnimation}}">
      <text>xxx{{contentText}}</text>
    </view>
    <view wx:if="{{isPlaying}}" class="header-speak-style">
      <image class="header-sound-style" src="../../static/images/plp/voice_icon_speech_sound_1.png" />
      <image wx:if="{{j==2}}" class="header-sound-style" src="../../static/images/plp/voice_icon_speech_sound_2.png" />
      <image wx:if="{{j==3}}" class="header-sound-style" src="../../static/images/plp/voice_icon_speech_sound_3.png" />
      <image wx:if="{{j==4}}" class="header-sound-style" src="../../static/images/plp/voice_icon_speech_sound_4.png" />
      <image wx:if="{{j==5}}" class="header-sound-style" src="../../static/images/plp/voice_icon_speech_sound_5.png" />
    </view>

    <!-- 扔 -->
    <view class="content">
      <ui-mask show="{{showMask}}" hide-on-tap="{{false}}" bindtap="onClickMask" _pid="{{_pid}}">
        <!--write.wxml-->
        <view class="content-weui-cellscontent- weui-cells_after-title" wx:if="{{!isInput}}">
          <view class="content-weui-cell" catchtap="onClickShowMask">
            <view class="content-weui-cell__bd">
              <textarea class="content-weui-textarea" value="{{contentInput}}" placeholder="请输入文本" style="height: 16em;" bindblur="bindTextAreaBlur">
                    </textarea></view>
          </view>
        </view>

        <view wx:if="{{isSpeaking}}" class="content-speak-style">
          <image class="content-sound-style" src="../../static/images/plp/voice_icon_speech_sound_1.png" />
          <image wx:if="{{jv==2}}" class="content-sound-style" src="../../static/images/plp/voice_icon_speech_sound_2.png" />
          <image wx:if="{{jv==3}}" class="content-sound-style" src="../../static/images/plp/voice_icon_speech_sound_3.png" />
          <image wx:if="{{jv==4}}" class="content-sound-style" src="../../static/images/plp/voice_icon_speech_sound_4.png" />
          <image wx:if="{{jv==5}}" class="content-sound-style" src="../../static/images/plp/voice_icon_speech_sound_5.png" />
        </view>
        <view class="content-play-style" catchtap="onClickShowMask">
          <image style="margin:20rpx 30rpx;height:80rpx;width:80rpx;" class="float-left" src="{{isInput?jp:ht}}" bindtap="inputSwitch" />
          <button class="content-btn-style float-left" bindtouchstart="touchdown" bindtouchend="touchup" bindtap="throwBottle">{{isInput?"按住 说话":"扔出去"}}</button>
        </view>
      </ui-mask>
      <image wx:if="{{bottle}}" class="content-bottle-style" animation="{{animationBottle}}" src="../../static/images/plp/bottle.png" />
    </view>
  </view>
  <view class="footer">
    <!--index.wxml-->
    <view class="footer-play-style">
      <view class="footer-leftstyle" bindtap="onThrow">
        <image class="footer-img" src="../../static/images/plp/b.png" />
        <text class="font-color-global-base">扔一个</text>
      </view>
      <view class="footer-playstyle" bindtap="onPick">
        <image class="footer-img" src="../../static/images/plp/a.png" />
        <text class="font-color-global-base">捡一个</text>
      </view>
      <view class="footer-rightstyle" bindtap="onMine">
        <image class="footer-img" src="../../static/images/plp/c.png" />
        <text class="font-color-global-base">我的瓶子</text>
        <ui-badge text="999" class="badge" _pid="{{_pid}}"></ui-badge>
      </view>
    </view>
  </view>
</view>
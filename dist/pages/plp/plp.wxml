<view>
  <ui-nav-bar slot="nav-bar" class="nav_bar" custom-style="{{ {backgroundColor:'#fff'} }}" _pid="{{_pid}}">
    <view class="ui-row" style="height:46px;">
      <view class="ui-col valign-middle" style="">
        <view class="ui-col-content valign-middle">
          <view class="text-center">漂流瓶子</view>
        </view>
      </view>
    </view>
  </ui-nav-bar>
  <view style="height:{{NAV_HEIGHT}}"></view>
  <view>
    <view class="header">
      <!--get.wxml-->
      <view class="bg-style">
        <image src="{{bgPng}}" style="height:{{imageHeight}}px;width:{{imageWidth}}px" />
      </view>
      <button class="btn-style" bindtap="onClick"></button>
      <view class="slide-mask" style="display:{{maskDisplay}}" bindtap="slideCloseEvent"></view>
      <view class="slide-menu" style="right: {{slideRight}}px;width: {{slideWidth}}px;height:{{slideHeight}}px;" animation="{{slideAnimation}}">
        <text>{{contentText}}</text>
      </view>
      <view wx:if="{{isPlaying}}" class="speak-style">
        <image class="sound-style" src="../../static/images/plp/voice_icon_speech_sound_1.png" />
        <image wx:if="{{jv==2}}" class="sound-style" src="../../static/images/plp/voice_icon_speech_sound_2.png" />
        <image wx:if="{{jv==3}}" class="sound-style" src="../../static/images/plp/voice_icon_speech_sound_3.png" />
        <image wx:if="{{jv==4}}" class="sound-style" src="../../static/images/plp/voice_icon_speech_sound_4.png" />
        <image wx:if="{{jv==5}}" class="sound-style" src="../../static/images/plp/voice_icon_speech_sound_5.png" />
      </view>
    </view>
    <view class="footer">
      <!--index.wxml-->
      <view class="play-style">
        <view class="playstyle">
          <image class="img" src="../../static/images/plp/a.png" bindtap="get" />
          <text class="font-color-global-base">捡一个</text>
        </view>
        <view class="leftstyle">
          <image class="img" src="../../static/images/plp/b.png" bindtap="throw" />
          <text class="font-color-global-base">扔一个</text>
        </view>
        <view class="rightstyle">
          <image class="img" src="../../static/images/plp/c.png" bindtap="mine" />
          <text class="font-color-global-base">我的瓶子</text>
        </view>
      </view>

    </view>
  </view>
</view>